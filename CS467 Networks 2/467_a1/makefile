
# This is a template Makefile generated by rpcgen

# Parameters

CLIENT = tims_client
SERVER = tims_server

SOURCES_CLNT.c = 
SOURCES_CLNT.h = 
SOURCES_SVC.c = 
SOURCES_SVC.h = 
SOURCES.x = tims.x

TARGETS_SVC.c = tims_svc.c tims_server.c tims_xdr.c 
TARGETS_CLNT.c = tims_clnt.c tims_client.c tims_xdr.c 
TARGETS = tims.h tims_xdr.c tims_clnt.c tims_svc.c tims_client.c tims_server.c

OBJECTS_CLNT = $(SOURCES_CLNT.c:%.c=%.o) $(TARGETS_CLNT.c:%.c=%.o)
OBJECTS_SVC = $(SOURCES_SVC.c:%.c=%.o) $(TARGETS_SVC.c:%.c=%.o)
# Compiler flags 
CC=clang
CFLAGS += -g -DRPC_SVC_FG
LDLIBS += -lnsl  -I -L gdbm-1.8.3/*.o
RPCGENFLAGS = -C

# Targets 

all : $(CLIENT) $(SERVER)

$(TARGETS) : $(SOURCES.x) 
	rpcgen $(RPCGENFLAGS) $(SOURCES.x)

$(OBJECTS_CLNT) : $(SOURCES_CLNT.c) $(SOURCES_CLNT.h) $(TARGETS_CLNT.c) tims_xdr.o

$(OBJECTS_SVC) : $(SOURCES_SVC.c) $(SOURCES_SVC.h) $(TARGETS_SVC.c) tims_xdr.o

$(CLIENT) : $(OBJECTS_CLNT) 
	$(LINK.c) -o $(CLIENT) $(OBJECTS_CLNT) $(LDLIBS) #/gdbm/lib/libgdbm.so

$(SERVER) : $(OBJECTS_SVC) 
	$(LINK.c) -o $(SERVER) $(OBJECTS_SVC) $(LDLIBS) #/gdbm/lib/libgdbm.so

 clean:
	 $(RM) core $(TARGETS) $(OBJECTS_CLNT) $(OBJECTS_SVC) $(CLIENT) $(SERVER)

